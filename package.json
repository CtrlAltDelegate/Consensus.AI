{
  "name": "consensus-ai",
  "version": "1.0.0",
  "description": "AI-powered consensus generation platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "node backend/src/minimal-app.js",
    "dev": "concurrently \"npm run dev --prefix frontend\" \"npm run dev --prefix backend\"",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:backend": "npm run dev --prefix backend",
    "start:frontend": "npm start --prefix frontend",
    "start:backend": "npm start --prefix backend",
    "build": "echo 'No build step needed for serverless functions'",
    "install:all": "npm install && npm install --prefix frontend && npm install --prefix backend",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules frontend/dist backend/dist",
    "heroku-postbuild": "cd backend && npm install --only=production"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "mongoose": "^7.5.0",
    "stripe": "^13.6.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.2",
    "axios": "^1.5.0",
    "pdf-lib": "^1.17.1",
    "nodemailer": "^6.9.4",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },

  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": ["ai", "consensus", "react", "nodejs"],
  "author": "Consensus.AI Team",
  "license": "MIT"
}